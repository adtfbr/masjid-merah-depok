<IfModule mod_rewrite.c>
    RewriteEngine On

    # Force HTTPS
    RewriteCond %{HTTPS} !=on
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Redirect ke public Laravel
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

Options -Indexes

# Lindungi file sensitif
<FilesMatch "^\.env">
    Require all denied
</FilesMatch>

# Lindungi folder internal Laravel (KECUALI storage)
RedirectMatch 403 ^/(vendor|bootstrap|config|database|routes|tests)/.*
